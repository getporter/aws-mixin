{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "installStep": {
      "type": "object",
      "properties": {
        "aws": { "$ref": "#/definitions/aws" }
      },
      "required": [
        "aws"
      ],
      "additionalProperties": false
    },
    "upgradeStep": {
      "type": "object",
      "properties": {
        "aws": { "$ref": "#/definitions/aws" }
      },
      "required": [
        "aws"
      ],
      "additionalProperties": false
    },
    "invokeStep": {
      "type": "object",
      "properties": {
        "aws": { "$ref": "#/definitions/aws" }
      },
      "required": [
        "aws"
      ],
      "additionalProperties": false
    },
    "uninstallStep": {
      "type": "object",
      "properties": {
        "aws": { "$ref": "#/definitions/aws" }
      },
      "required": [
        "aws"
      ],
      "additionalProperties": false
    },
    "aws": {
      "type": "object",
      "properties": {
        "description": {
          "$ref": "#/definitions/stepDescription"
        },
        "service": {
          "type": "string"
        },
        "operation": {
          "type": "string"
        },
        "arguments": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "flags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "outputs": {
          "$ref": "#/definitions/outputs"
        },
        "suppress-output": {
          "type": "boolean",
          "default": false
        }
      },
      "additionalProperties": false,
      "required": [
        "description",
        "service",
        "operation"
      ]
    },
    "stepDescription": {
      "type": "string",
      "minLength": 1
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "jsonPath": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "jsonPath"
        ]
      }
    }
  },
  "type": "object",
  "properties": {
    "install": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/installStep"
      }
    },
    "upgrade": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/upgradeStep"
      }
    },
    "uninstall": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/uninstallStep"
      }
    }
  },
  "patternProperties": {
    ".*": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/invokeStep"
      }
    }
  },
  "additionalProperties": false
}
